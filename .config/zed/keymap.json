[
	{
		"bindings": {
			"ctrl-alt-y": "workspace::CloseAllDocks",
			"ctrl-\\": null,
			"ctrl-\\ c": "workspace::CloseAllDocks",
			"ctrl-\\ b": "tab_switcher::Toggle",
			"ctrl-\\ o": "file_finder::Toggle",
			"ctrl-\\ a": "command_palette::Toggle",
			"ctrl-\\ m": "assistant::InlineAssist",
			"ctrl-\\ f": "pane::DeploySearch",
			"ctrl-\\ d": "project_panel::ToggleFocus",
			"ctrl-\\ d h": "project_panel::ToggleFocus",
			"ctrl-\\ :": "command_palette::Toggle",
			"ctrl-w h": "workspace::ActivatePaneLeft",
			"ctrl-w l": "workspace::ActivatePaneRight",
			"ctrl-w k": "workspace::ActivatePaneUp",
			"ctrl-w j": "workspace::ActivatePaneDown",
			"ctrl-\\ t": "workspace::NewCenterTerminal",
			"ctrl-\\ t t": "workspace::NewCenterTerminal",
			"ctrl-\\ t j": ["workspace::SendKeystrokes", "ctrl-w s \\ t t"],
			"ctrl-\\ t h": ["workspace::SendKeystrokes", "ctrl-w ctrl-v \\ t t"],
			"ctrl-\\ t k": ["workspace::SendKeystrokes", "ctrl-w ctrl-s \\ t t"],
			"ctrl-\\ t l": ["workspace::SendKeystrokes", "ctrl-w v \\ t t"]
		}
	},
	{
		"context": "Terminal",
		"bindings": {
			// free up these for terminal to use
			"ctrl-b": ["terminal::SendKeystroke", "ctrl-b"],
			"ctrl-t": ["terminal::SendKeystroke", "ctrl-t"],
			"ctrl-w": ["terminal::SendKeystroke", "ctrl-w"],
			
			// get window mappings working
			"ctrl-\\ ctrl-w h": "workspace::ActivatePaneLeft",
			"ctrl-\\ ctrl-w l": "workspace::ActivatePaneRight",
			"ctrl-\\ ctrl-w k": "workspace::ActivatePaneUp",
			"ctrl-\\ ctrl-w j": "workspace::ActivatePaneDown",
			"ctrl-\\ ctrl-w s": "pane::SplitDown",
			"ctrl-\\ ctrl-w v": "pane::SplitRight",

			// overwrite global \t mappings to work properly
			"ctrl-\\ t j": "pane::SplitDown",
			"ctrl-\\ t h": "pane::SplitLeft",
			"ctrl-\\ t k": "pane::SplitUp",
			"ctrl-\\ t l": "pane::SplitRight"
		}
	},
	{
		"context": "VimControl",
		"bindings": {
			// overwriting some global keybindings:
			"ctrl-\\ c": ["workspace::SendKeystrokes", "escape ctrl-alt-y"], // ctrl-alt-y = close all docks
			"ctrl-\\ d": "pane::RevealInProjectPanel",
			"ctrl-\\ d h": "pane::RevealInProjectPanel",
			
			// leader shortcuts, which refer to the global keybindings:
			"\\ c": ["workspace::SendKeystrokes", "ctrl-\\ c"],
			"\\ b": ["workspace::SendKeystrokes", "ctrl-\\ b"],
			"\\ o": ["workspace::SendKeystrokes", "ctrl-\\ o"],
			"\\ a": ["workspace::SendKeystrokes", "ctrl-\\ a"],
			"\\ m": ["workspace::SendKeystrokes", "ctrl-\\ m"],
			"\\ f": ["workspace::SendKeystrokes", "ctrl-\\ f"],
			"\\ d": ["workspace::SendKeystrokes", "ctrl-\\ d"],
			"\\ d h": ["workspace::SendKeystrokes", "ctrl-\\ d h"],
			":": ["workspace::SendKeystrokes", "ctrl-\\ :"],
			"\\ t": ["workspace::SendKeystrokes", "ctrl-\\ t"],
			"\\ t t": ["workspace::SendKeystrokes", "ctrl-\\ t t"],
			"\\ t j": ["workspace::SendKeystrokes", "ctrl-\\ t j"],
			"\\ t h": ["workspace::SendKeystrokes", "ctrl-\\ t h"],
			"\\ t k": ["workspace::SendKeystrokes", "ctrl-\\ t k"],
			"\\ t l": ["workspace::SendKeystrokes", "ctrl-\\ t l"],

			// editor-specific stuff
			"ctrl-j": ["workspace::SendKeystrokes", "1 0 j"],
			"ctrl-k": ["workspace::SendKeystrokes", "1 0 k"],
			"\\ q": "editor::ToggleCodeActions",
			"\\ h": "editor::Hover",
			"\\ e": "editor::GoToDiagnostic",

			// \gd split mappings
			"\\ g d": "editor::GoToDefinition",
			"\\ g d d": "editor::GoToDefinition",
			"\\ g d j": ["workspace::SendKeystrokes", "ctrl-w s \\ g d d"],
			"\\ g d h": ["workspace::SendKeystrokes", "ctrl-w ctrl-v \\ g d d"],
			"\\ g d k": ["workspace::SendKeystrokes", "ctrl-w ctrl-s \\ g d d"],
			"\\ g d l": ["workspace::SendKeystrokes", "ctrl-w v \\ g d d"],

			// \gD split mappings
			"\\ g shift-d": "editor::GoToDeclaration",
			"\\ g shift-d shift-d": "editor::GoToDeclaration",
			"\\ g shift-d j": ["workspace::SendKeystrokes", "ctrl-w s \\ g shift-d shift-d"],
			"\\ g shift-d h": ["workspace::SendKeystrokes", "ctrl-w ctrl-v \\ g shift-d shift-d"],
			"\\ g shift-d k": ["workspace::SendKeystrokes", "ctrl-w ctrl-s \\ g shift-d shift-d"],
			"\\ g shift-d l": ["workspace::SendKeystrokes", "ctrl-w v \\ g shift-d shift-d"],

			// \gi split mappings
			"\\ g i": "editor::GoToImplementation",
			"\\ g i i": "editor::GoToImplementation",
			"\\ g i j": ["workspace::SendKeystrokes", "ctrl-w s \\ g i i"],
			"\\ g i h": ["workspace::SendKeystrokes", "ctrl-w ctrl-v \\ g i i"],
			"\\ g i k": ["workspace::SendKeystrokes", "ctrl-w ctrl-s \\ g i i"],
			"\\ g i l": ["workspace::SendKeystrokes", "ctrl-w v \\ g i i"],

			// \gr split mappings
			"\\ g r": "editor::FindAllReferences",
			"\\ g r r": "editor::FindAllReferences",
			"\\ g r j": ["workspace::SendKeystrokes", "ctrl-w s \\ g r r"],
			"\\ g r h": ["workspace::SendKeystrokes", "ctrl-w ctrl-v \\ g r r"],
			"\\ g r k": ["workspace::SendKeystrokes", "ctrl-w ctrl-s \\ g r r"],
			"\\ g r l": ["workspace::SendKeystrokes", "ctrl-w v \\ g r r"],
			
			// \gf split mappings
			"\\ g f": "editor::OpenSelectedFilename",
			"\\ g f f": "editor::OpenSelectedFilename",
			"\\ g f j": ["workspace::SendKeystrokes", "ctrl-w s \\ g f f"],
			"\\ g f h": ["workspace::SendKeystrokes", "ctrl-w ctrl-v \\ g f f"],
			"\\ g f k": ["workspace::SendKeystrokes", "ctrl-w ctrl-s \\ g f f"],
			"\\ g f l": ["workspace::SendKeystrokes", "ctrl-w ctrl-v \\ g f f"]
		}
	},
	{
		"context": "Editor && vim_mode == visual",
		"bindings": {
			"shift-s": ["vim::PushAddSurrounds", {}],
			"v": "editor::SelectLargerSyntaxNode",
			"V": "editor::SelectSmallerSyntaxNode",

			"\\ r": ["workspace::SendKeystrokes", "\" + y \\ t t"],
		}
	},
	{
		"context": "multibuffer",
		"bindings": {
			// \gf split mappings
			"\\ g f": "editor::OpenExcerpts",
			"\\ g f f": "editor::OpenExcerpts"
		}
	},
]
