{
  // General Settings
  "restore_on_startup": "none",

  // Vim Stuff
  "vim_mode": true,
  "vim": {
    "use_system_clipboard": "never"
  },
  "pane_split_direction_vertical": "right",
  "pane_split_direction_horizontal": "down",
  "command_aliases": {
    "CLO": "pane: close inactive items",
    "ON": "pane: join into next", // TODO: should be "pane: join all" once it lands
    "q": "pane: join into next",
    "ERRS": "diagnostics: deploy",
    "qa": "zed: quit"
  },
  "cursor_blink": false,

  // AI Stuff
  "assistant": {
    "default_model": {
      "provider": "zed.dev",
      "model": "claude-3-5-sonnet-20240620"
    },
    "version": "2"
  },

  // Git stuff
  "git": {
    "inline_blame": { "enabled": false }
  },

  // Visual stuff
  "theme": {
    "mode": "system",
    "light": "Gruvbox Light",
    "dark": "Gruvbox Dark"
  },
  "soft_wrap": "editor_width",
  "buffer_font_weight": 501,
  "preferred_line_length": 120,
  "buffer_font_family": "UbuntuMono Nerd Font",
  "buffer_font_size": 16
}
