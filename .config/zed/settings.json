{
  "assistant": {
    "default_model": {
      "provider": "zed.dev",
      "model": "claude-3-5-sonnet-20240620"
    },
    "version": "2"
  },
  "vim_mode": true,
  "vim": {
    "use_system_clipboard": "never"
  },
  "pane_split_direction_vertical": "right",
  "pane_split_direction_horizontal": "down",
  "command_aliases": {
    "CLO": "pane: close inactive items",
    "ON": "pane: join into next",
    "q": "pane: close all items",
    "ERRS": "diagnostics: deploy",
    "qa": "zed: quit"
  },
  "git": {
    "inline_blame": { "enabled": false }
  },
  "soft_wrap": "editor_width",
  "buffer_font_weight": 501,
  "preferred_line_length": 120,
  "theme": {
    "mode": "system",
    "light": "One Light",
    "dark": "One Dark"
  },
  "lsp": {
    "rust-analyzer": {
      "binary": {
        // Setting binary to global rust-analyzer, not the one
        // auto-downloaded by Zed. Since Zed is in a flatpak,
        // the auto-downloaded one would be in a sandbox and
        // that prevents it from accessing some dynamic libraries.
        "path": "/home/ydhamija/.cargo/bin/rust-analyzer"
      }
    }
  }
}
